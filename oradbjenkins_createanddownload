                  }

                                                                  }

           stage ('Install Database Software') {
            steps { 
                echo 'Install Oracle Oracle RDBMS software'

                sh script: "sudo su - root bash -c 'cd /tmp; yum -y localinstall /u01/stage/oracle-database-ee-18c-1.0-1.x86_64.rpm'"
                  }

                                               }
           stage ('Create Database') {
